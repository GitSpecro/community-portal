<%- include('header') %>

<!-- Events Header -->
<section class="py-5 text-center text-white" style="background-color: #FF595E;">
  <div class="container">
    <h1 class="fw-bold" style="color: white;">Upcoming Events</h1>
    <p class="lead">Join us for creative workshops, music concerts, tech talks, and more!</p>
  </div>
</section>

<!-- Events Grid -->
<section class="py-5" style="background-color: #F9F4EF;">
  <div class="container">
    <div class="row">
      <% events.forEach(event => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm border-0">
            <img src="<%= event.image %>" alt="<%= event.title %>" class="card-img-top" style="height: 100%; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title" style="color: #3D348B;"><%= event.title %></h5>
              <p class="text-muted small mb-2"><strong>Date:</strong> <%= event.date %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include('footer') %>
